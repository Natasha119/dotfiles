:set incsearch
:set nowrapscan

:set ruler
:set number
:set relativenumber
:set foldcolumn=3

:set laststatus=2
:set statusline=%f%=[%M%R%H]\ [LN\ %l]\ [CL\ %c]\ [%p%%\ (%L)]

:map  <ScrollWheelDown>  <Nop>
:map! <ScrollWheelDown>  <Nop>
:map  <ScrollWheelUp>    <Nop>
:map! <ScrollWheelUp>    <Nop>
:map  <ScrollWheelLeft>  <Nop>
:map! <ScrollWheelLeft>  <Nop>
:map  <ScrollWheelRight> <Nop>
:map! <ScrollWheelRight> <Nop>
